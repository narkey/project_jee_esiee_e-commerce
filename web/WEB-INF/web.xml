    <filter>
		<filter-name>ClientFilter</filter-name>
		<filter-class>com.esiee.projet.ClientFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ClientFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>AdminFilter</filter-name>
		<filter-class>com.esiee.projet.AdminFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AdminFilter</filter-name>
		<url-pattern>/Recap</url-pattern>
		<url-pattern>/AjouterRef</url-pattern>
		<url-pattern>/ModifierRef</url-pattern>
		<url-pattern>/SupprimerRef</url-pattern>
		<url-pattern>/detailsCommande</url-pattern>
	</filter-mapping>
	

        
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
